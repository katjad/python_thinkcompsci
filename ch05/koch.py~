from TurtleWorld import *

world = TurtleWorld()
bob = Turtle()
bob.delay = 0.1

def koch(t,x):
    if x < 3:
        fd(t,x)
    else:
        koch(t,x/3)
        lt(t,60)
        koch(t,x/3)
        rt(t,120)
        koch(t,x/3)
        lt(t,60)
        koch(t,x/3)

koch(bob,27)
       
wait_for_user()
